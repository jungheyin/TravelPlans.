 <insert id="insertTraffic" parameterType="map">
	INSERT INTO `traffic`
	(
		`travelId`
		,`traffic`
		,`trafficInfo`
		,`start`
		,`startDate`
		,`startTime`
		,`arrive`
		,`arriveDate`
		,`arriveTime`
		,`price`
		,`memo`
		,`createdAt`
		,`updatedAt`
	)
	VALUES
	(
		#{travelId}
		,#{traffic}
		,#{trafficInfo}
		,#{start}
		,#{startDate}
		,#{startTime}
		,#{arrive}
		,#{arriveDate}
		,#{arriveTime}
		,#{price}
		,#{memo}
		,NOW()
		,NOW()
	)
</insert>

