<select id="selectLastTravel" resultType="com.travelplans.new_travel.model.Travel">
	SELECT 
		`id`
		,`userId`
		,`title`
		,`color`
		,`startDate`
		,`endDate`
		,`price`
		,`createdAt`
		,`updatedAt`
	FROM
		`travel`
	ORDER BY `id` DESC
