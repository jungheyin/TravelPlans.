<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 

<mapper namespace="com.travelplans.itinerary.dao.ItineraryDAO">
	
		<select id="selectItineraryById" resultType="com.travelplans.itinerary.model.Itinerary">
		SELECT
			,`id`
			,`travelId`
	 		,`color`
			,`title`
		 	,`createdAt`
			,`updatedAt`
		FROM
			`itinerary`
		WHERE
			`id` = #{itineraryId}
	</select>
	
	<select id="selectItineraryListById" resultType="com.travelplans.itinerary.model.Itinerary">
		SELECT
			,`id`
			,`travelId`
	 		,`color`
			,`title`
		 	,`createdAt`
			,`updatedAt`
		FROM
			`itinerary`
		WHERE
			`id` = #{id}
			AND `travelId` = #{travelId}
	</select>

</mapper>